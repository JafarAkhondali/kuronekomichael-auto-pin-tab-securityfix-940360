{
  "name": "lock-tab",
  "manifest_version": 2,
  "version": "0.0.1",
  "description": "自動的にタブをロックします",
  "background": {
    "scripts": ["src/background.js"]
  },
  "icons": {
    "16": "img/icon_16x16.png",
    "128": "img/icon_128x128.png"
  },
  "content_scripts": [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["src/content_script.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "management",
    "background"
  ],
  "options_page": "src/options.html"
}